doctype html
html
  head
    title= title
    link(rel='stylesheet', href='./stylesheets/entrystyle.css')
  body
    div(id="centeredContainer")
        div(id="options")
            input(
                type="image"
                title="create new graph"
                id="create-graph"
                src='./images/node_button.svg'
                onclick="location.href='/graphID'"
            )
            input(
                type="image"
                title="load graph from database"
                id="load-graph"
                src='./images/load_button.png'
                onclick="location.href='/retrieveGraphID'"
            )
            input(
                type="image"
                title="load graph from json file"
                id="load-json"
                src='./images/file_button.png'
                onclick="$('#fileinput').trigger('click'); "
            )
            div.hiddenfile
                form(id='jsonFileUploadForm' action='/jsonUpload' method='post')
                    input(
                        type="file"
                        title="load graph from json file"
                        id="fileinput"
                    )
    block content
    script(src='./javascripts/jquery.min.js')
    script(src='//d3js.org/d3.v3.js')
    script(src='./javascripts/EntryView.js')