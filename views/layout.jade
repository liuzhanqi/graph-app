doctype html
html
  head
    title= title
    link(rel='stylesheet', href='./stylesheets/style.css')
  body
    div.loginbox
        button#add Add attributes
        form(id="add-node", name="add-node", method="post")
          table
            tr
              td type:
              td 
                input(type="text", name="type")
            tr.attribute
              td attribute:
              td
                input(type="text", name="attribute")
            tr
              td
              td
                input(type="submit", name="submit")
    div(id="graph")
        div(id="toolbox")
            input(
                type="image"
                title="create node"
                id="create-node"
                src='./images/node_button.svg'
                onclick="graph.toggle_draw_node();"
            )
            input(
                type="image"
                title="create edge"
                id="create-edge"
                src='./images/edge_button.png'
                onclick="graph.toggle_draw_edge();"
            )
            input(
                type="image"
                title="eraser"
                id="eraser"
                src='./images/eraser_button.png'
                onclick="graph.toggle_eraser();"
            )
            input(
                type="image"
                title="save graph to datavase"
                id="save"
                src='./images/save_button.png'
                onclick="graph.save_graph();"
            )
            input(
                type="image"
                title="load graph from database"
                id="load"
                src='./images/load_button.png'
                onclick="graph.load_graph();"
            )
            input(
                type="image"
                title="upload json"
                id="upload_json"
                src='./images/file_button.png'
                onclick="graph.upload_file();"
            )
    block content
    script(src='//cdn.jsdelivr.net/filesaver.js/0.1/FileSaver.min.js')
    script(src='./javascripts/jquery.min.js')
    script(src='//d3js.org/d3.v3.js')
    script(src='http://d3js.org/queue.v1.min.js')
    script(src='./javascripts/GraphView.js')
    script(src='./javascripts/graph-painter.js')
    script(src='./javascripts/form-actor.js')